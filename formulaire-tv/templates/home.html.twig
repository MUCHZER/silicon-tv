{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
	<header class="background-white">
		<div class="container">
			<a href="https://www.siliconcomte.fr/">< Retour sur le site Silicon Compté</a>
		</div>
	</header>
	
	<section class="background-yellow">
		<div class="container">
			<h3>Formulaire d'inscription à la TV SiliconComté diffusé pendant l'évenement du 15/03</h3>
		</div>
	</section>
	
	<section class="background-white">
		<div class="container">
			{{ form_start(form) }}
			<div class="col-md-6">
				{{ form_row(form.email) }}
				{{ form_row(form.name) }}
				{{ form_row(form.bio) }}
				{{ form_row(form.imageFile) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.url) }}
				{{ form_row(form.facebook) }}
				{{ form_row(form.twitter) }}
				{{ form_row(form.instagram) }}
				{{ form_row(form.linkedin) }}
			</div>
			{{ form_end(form) }}
		
		</div>
	</section>
	
	<footer class="background-blue footer">
		<div class="container">
			<ul class="list-unstyled list-inline">
				<li><a href="https://www.siliconcomte.fr/mentions-legales/" class="sc-caps sc-link-darker">mentions
						légales</a></li>
				<li><a href="https://www.siliconcomte.fr/contact/" class="sc-caps sc-link-darker">contacts</a></li>
				<li><a href="https://www.siliconcomte.fr/credits/" class="sc-caps sc-link-darker">crédits</a></li>
			</ul>
		</div>
	</footer>
{% endblock %}